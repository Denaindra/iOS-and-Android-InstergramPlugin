            <Label Text="Beleza!" FontAttributes="Bold" TextColor="White" FontSize="35" HorizontalOptions="CenterAndExpand" />
             <Label HorizontalTextAlignment="Center" Text="Agora vocÄ“ pode voltar ao painel e configurar sua conta." TextColor="White" FontSize="15" HorizontalOptions="CenterAndExpand" />
